<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monappli"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar">
        <uses-library android:name="com.google.android.maps"/>
        
        <activity
            android:name="com.boutayna.monappli.activities.SplashScreenActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.boutayna.monappli.activities.MainActivity">    
        </activity>
        <activity android:name=".ActiviteTab" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.ListActivity" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.DetailActivity" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.MaMapActivity" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.CarteActivity" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.FavorisActivity" >
        </activity>
        <activity android:name="com.boutayna.monappli.activities.DetailPOIMapActivity" >
        </activity>
        
    </application>

</manifest>